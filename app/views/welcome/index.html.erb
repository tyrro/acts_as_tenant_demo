<h2>Hello!</h2>

<% if current_user %>
  <table>
    <tbody>
      <tr>
        <td>ID : </td>
        <td><%= current_user.id %></td>
      </tr>

      <tr>
        <td>Email : </td>
        <td><%= current_user.email %></td>
      </tr>

      <tr>
        <td>Encrypted Password : </td>
        <td><%= current_user.encrypted_password %></td>
      </tr>

      <tr>
        <td>------ Current Company Information ------</td>
      </tr>

      <tr>
        <td>Name : </td>
        <td><%= current_tenant.name %></td>
      </tr>

      <tr>
        <td>Users : </td>
        <td><%= User.pluck(:email).to_sentence %></td>
      </tr>

      <tr><td colspan="2">&nbsp;</td></tr>

      <tr>
        <td colspan="2">
          <%= button_to "Logout", destroy_user_session_path, :method => :delete %>
        </td>
      </tr>
    </tbody>
  </table>
<%end%>
