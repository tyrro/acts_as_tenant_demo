<h2>Hello, Ruby Tuesday!</h2>

<% if current_user %>
  <table>
    <tbody>
      <tr>
        <td><h2>------ User ------</h2></td>
      </tr>

      <tr>
        <td>ID : </td>
        <td><%= current_user.id %></td>
      </tr>

      <tr>
        <td>Email : </td>
        <td><%= current_user.email %></td>
      </tr>

      <tr>
        <td><h2>------ Company ------</h2></td>
      </tr>

      <tr>
        <td>Name : </td>
        <td><%= current_tenant&.name %></td>
      </tr>

      <tr>
        <td>Query All Users : </td>
        <td><%= User.pluck(:email).to_sentence %></td>
      </tr>

      <tr><td colspan="2">&nbsp;</td></tr>

      <tr>
        <td colspan="2">
          <%= button_to "Logout", destroy_user_session_path, :method => :delete %>
        </td>
      </tr>
    </tbody>
  </table>
<%end%>
